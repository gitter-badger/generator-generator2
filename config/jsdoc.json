{
	"opts": {
		"destination": "./build/jsdoc",
		"encoding": "utf8",
		"recurse": true
	},
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": [
			"jsdoc",
			"closure"
		]
	},
	"source": {
		"includePattern": ".+\\.js(doc|x)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
	"plugins": [
		"plugins/markdown",
		"config/jsdoc_spec"
	],
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": true
	}
}